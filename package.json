{
  "name": "nutjs-rest-api",
  "version": "1.0.1",
  "type": "module",
  "description": "REST API wrapper for NutJS desktop automation",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:web": "webpack serve --mode development --config web/webpack.config.cjs",
    "dev:full": "concurrently \"webpack --watch --mode development --config web/webpack.config.js\" \"tsx watch src/index.ts\"",
    "build": "tsc -p tsconfig.json",
    "build:web": "webpack --mode production --config web/webpack.config.js",
    "build:prod": "tsc -p tsconfig.prod.json",
    "clean": "rimraf dist coverage .nyc_output",
    "start": "cross-env NODE_ENV=production npm-run-all clean build:web build:prod start:prod",
    "start:prod": "node dist/index.js",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:coverage": "jest --coverage",
    "test:api": "tsx src/test-endpoint.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "audit:roadmap": "echo 'TODO: Implement roadmap audit script'",
    "prepare": "husky",
    "download-tessdata": "node scripts/download-tessdata.js",
    "postinstall": "node scripts/download-tessdata.js || echo 'Tessdata download failed, will download on first use'"
  },
  "dependencies": {
    "@fastify/static": "^6.12.0",
    "@langchain/core": "^0.3.62",
    "@langchain/deepseek": "^0.0.2",
    "@langchain/openai": "^0.5.18",
    "@nut-tree-fork/nut-js": "^4.2.0",
    "bootstrap": "^5.3.2",
    "clipboardy": "^4.0.0",
    "concurrently": "^8.2.2",
    "dotenv": "^16.3.1",
    "fastify": "^4.24.0",
    "nanoid": "^5.1.5",
    "node-global-key-listener": "^0.3.0",
    "pino": "^8.16.0",
    "pino-pretty": "^10.3.0",
    "react": "^18.2.0",
    "react-bootstrap": "^2.9.1",
    "react-dom": "^18.2.0",
    "reflect-metadata": "^0.2.1",
    "robotjs": "^0.6.0",
    "sharp": "^0.34.2",
    "tesseract.js": "^6.0.1",
    "tsyringe": "^4.8.0",
    "uiohook-napi": "^1.5.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/clipboardy": "^1.1.0",
    "@types/eventsource": "^1.1.15",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.38",
    "@types/react-dom": "^18.2.17",
    "@types/sharp": "^0.31.1",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eventsource": "^2.0.2",
    "html-webpack-plugin": "^5.5.3",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.0",
    "rimraf": "^6.0.1",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "prettier --write"
    ],
    "**/*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
